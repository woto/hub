<div class="modal modal-blur fade" id="offers-categories-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('offers_categories') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"></path><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        </button>
      </div>

      <div class="modal-body">
        <input type="text" class="form-control form-control-rounded mb-2" name="Form control rounded" placeholder="Quick search">
      </div>

      <div class="modal-body">

        <%= render 'checkbox' %>

        <div data-target="body.categories"></div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-white mr-auto" data-dismiss="modal"><%= t('close') %></button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
      </div>
    </div>
  </div>
</div>
