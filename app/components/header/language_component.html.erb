<%= render(
      ReactComponent.new(name: 'Language',
                         props: {
                           currentLanguage: '',
                           title: t('.title'),
                           languages:
                             I18n.available_locales.map do |locale|
                               {
                                 title: helpers.system_locale_to_human(locale),
                                 url: helpers.path_for_switch_language(locale, Current.realm&.kind) ||
                                   url_for(
                                     Tools::SwitchLanguage.call(
                                       subdomains: request.subdomains,
                                       host: request.host,
                                       locale: locale).object
                                   )
                               }
                             end
                           }))
%>