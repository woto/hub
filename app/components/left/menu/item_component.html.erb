<% css_class = 'nav-item' %>
<% css_class << ' active' if @current_page %>

<li class="<%= css_class %>">

  <% a_class = ' disabled' if @disabled %>

  <%= link_to(@path, class: "nav-link #{a_class}", 'data-turbo': false) do %>
    <span class="nav-link-icon d-lg-inline-block">
      <%== @icon %>
    </span>
    <span class="nav-link-title">
      <%= @title %>
    </span>
  <% end %>
</li>
