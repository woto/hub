<%= tag.div 'data-controller': 'popover',
            class: 'd-inline-block',
            'data-popover-url-value': popover_entity_path(id: @entity.last) do %>
  <%= link_to entity_path(id: @entity.last),
            tabindex: "0",
            class: "btn btn-sm mb-1 me-1 #{ @entity.first['is_main'] ? 'btn-blue' : 'btn-secondary' }",
            'data-popover-target': 'hoverableElement' do %>
    <%= @entity.first['title'] %>
  <% end %>
<% end %>
