

<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New report</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <!-- SVG icon code -->
      </button>
    </div>

    <div class="modal-body">

      <%= simple_form_for User.new, url: '/oauth/token', remote: true do |f| %>
        <%= f.error_notification %>

        <%= f.input :email, input_html: { name: 'username', autocomplete: 'email' } %>
        <%= f.input :password, input_html: { name: 'password', autocomplete: 'current-password' } %>
        <%= f.input :grant_type, input_html: { name: 'grant_type', value: 'password' } %>

        <%= f.button :submit, class: "btn-primary" %>
        <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
      <% end %>


      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" name="email" placeholder="Your report name">
      </div>
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" name="password" placeholder="Your report name">
      </div>
      <div class="mb-3">
        <label class="form-label">Confirm</label>
        <input type="text" class="form-control" name="confirm" placeholder="Your report name">
      </div>

    </div>
    <div class="modal-footer">
      <a href="#" class="btn btn-link link-secondary" data-dismiss="modal">
        Cancel
      </a>
      <a href="#" class="btn btn-primary ml-auto" data-dismiss="modal">
        <!-- SVG icon code -->
        Create new report
      </a>
    </div>
  </div>
</div>
