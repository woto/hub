<%= tag.div class: "input-group",
            data: { controller: 'search-base',
                    "search-base-everywhere-url": url_for(request.params.slice(*@preserved_search_params)
                                                              .merge(action: :index, only_path: false)) } do %>

  <%= text_field_tag :q, params[:q],
                     id: nil,
                     data: { target: 'search-base.searchText', action: 'keydown->search-base#clickSearchButton' },
                     class: 'search-text form-control', placeholder: t('search_placeholder') %>

  <%= render 'button', btn_class: btn_class %>

<% end %>
