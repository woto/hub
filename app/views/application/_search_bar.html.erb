<%= tag.div class: "input-group input-group-flat",
            'data-controller': 'search-base clear-search',
            'data-search-base-everywhere-url': url_for_search_everywhere do %>

  <%= text_field_tag :q, params[:q],
                     'data-search-base-target': 'searchText',
                     'data-clear-search-target': 'searchText',
                     'data-action': 'keydown->search-base#clickSearchButton',
                     class: 'search-text form-control',
                     placeholder: t('search_placeholder') %>

  <%= render Header::ClearSearchComponent.new %>

  <%= render 'button', btn_class: btn_class %>

<% end %>
