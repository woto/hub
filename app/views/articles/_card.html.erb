<%= tag.div test_id => "articles-card-#{@article.id}", test_class => 'articles-card', class: 'card card-md mb-3' do %>
  <div class="card-body">

    <div class="d-flex align-items-center mb-4">
      <h2>
        <%== @article.title %>
      </h2>

      <span class="ms-auto text-muted articles-date">
        <%== l @article.published_at.utc.to_date %>
      </span>
    </div>

    <div class="fs-6 lh-lg articles-body">
      <%==  @article.body %>
    </div>

    <div class="mt-3">
      <%= link_to t('back_to_articles'),
                  articles_link,
                  class: 'btn btn-light' %>
    </div>

    <div class="mt-3">
      <% @article.tags.each do |item| %>
        <% next if item.blank? %>

        <%= link_to item, articles_by_tag_link(item),
                    class: 'badge bg-cyan-lt me-1 mb-1' %>
      <% end %>
    </div>

  </div>
<% end %>
