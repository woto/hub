<% render 'breadcrumbs' %>

<% seo.title! t("titles.dashboard") %>

<div class="col">
  <div class="row">
    <div class="col-md-8 mb-3">

      <h2><%= t('.posts_statuses') %></h2>
      <% [['draft_post', 'pending_post', 'approved_post'], ['accrued_post', 'rejected_post', 'canceled_post']].each do |statuses| %>
        <div class="row">
          <% statuses.each do |status| %>
            <% if current_user.user? %>
              <% scope = current_user.posts %>
            <% else %>
              <% scope = Post %>
            <% end %>
            <% count = scope.where(status: status).count %>
            <%= render 'post_card', status: status, count: count %>
          <% end %>
        </div>
      <% end %>

      <h2><%= t('.today_rates') %></h2>
      <div class="row row-cols-1 row-cols-xl-3">
        <% ExchangeRate.pick.currencies.each do |excchange_rate| %>
          <%= render 'exchange_rate_card', currency_code: excchange_rate['key'], currency_value: excchange_rate['value']  %>
        <% end %>
      </div>

      <div class="card min-height-450">
        <div class="card-body">
          <h2><%= t('.under_construction') %></h2>
        </div>
      </div>


    </div>

    <div class="col-md-4">

      <h2><%= t('.accounts') %></h2>
      <% Rails.configuration.available_currencies.each do |currency| %>
        <div class="mb-3">
          <%= render 'shared/balance/account', currency: currency, user: current_user %>
        </div>
      <% end %>
      <%= link_to t('buttons.checks'), checks_path, class: 'btn btn-pink d-block' %>

      <div class="my-3"></div>

      <%= turbo_frame_tag 'articles-latest', src: frames_articles_latest_path %>
    </div>
  </div>
</div>
