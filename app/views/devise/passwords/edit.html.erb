<div class="text-center mb-4">
  <%= link_to root_path do %>
    <%= image_tag(asset_pack_path('media/images/logo.svg'), height: "36") %>
  <% end %>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                    html: { method: :put, class: 'card card-md' }) do |f| %>

  <div class="card-body">

    <h2 class="mb-4 text-center"><%= t(".change_your_password") %></h2>

    <%= f.error_notification %>

    <%= render TopPageNotifyComponent.new(message: f.full_error(:reset_password_token), alert_type: :warning) %>

    <%= f.input :reset_password_token, as: :hidden, error: false %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: t(".new_password"),
                  required: true,
                  autofocus: true,
                  hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: t(".confirm_new_password"),
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-footer">
      <%= f.button :submit, t(".change_my_password"), class: 'btn btn-primary w-100' %>
    </div>

  </div>

<% end %>

<%= render "devise/shared/links" %>
