<div class="text-center mb-4">
  <img src="/static/logo.svg" height="36" alt="">
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'card card-md'}) do |f| %>

  <div class="card-body">

    <h2 class="mb-5 text-center"><%= t(".sign_in") %></h2>

    <%= render TopPageNotifyComponent.new(message: alert, alert_type: 'danger') %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  wrapper_html: { class: 'mb-3' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  wrapper_html: { class: 'mb-3' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-footer">
      <%= f.button :button, t(".sign_in"), class: 'btn btn-primary btn-block', id: 'login' %>
    </div>

  </div>

  <div class="hr-text">or</div>

  <div class="card-body">

    <div class="btn-list">
      <%= render SocialButtonComponent.new(
          type: 'google',
          link_class: 'btn btn-white btn-block',
          title: 'Login with Google',
          path: '/users/auth/google_oauth2/'
      ) %>

      <%= render SocialButtonComponent.new(
          type: 'facebook',
          link_class: 'btn btn-white btn-block',
          title: 'Login with Facebook',
          path: '/users/auth/facebook/'
          ) %>

    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
