<div class="text-center mb-4">
  <%= link_to root_path do %>
    <%= image_tag(asset_pack_path('media/images/logo.svg'), height: "36") %>
  <% end %>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                    html: { class: 'card card-md', 'data-turbo': "false" }) do |f| %>

  <div class="card-body">

    <h2 class="mb-4 text-center"><%= t(".sign_in") %></h2>

    <%= render TopPageNotifyComponent.new(message: alert, alert_type: 'danger') %>
    <%= render TopPageNotifyComponent.new(message: notice, alert_type: 'primary') %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  wrapper_html: { class: 'mb-3' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  wrapper_html: { class: 'mb-3' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-footer">
      <%= f.button :submit, t(".sign_in"), class: 'btn btn-primary w-100', id: 'login' %>
    </div>

  </div>

  <div class="hr-text">or</div>

  <div class="card-body">
    <div class="row">
      <div class="col d-sm-flex justify-content-around">
        <%= render SocialButtonComponent.new(
            type: 'google',
            link_class: 'btn btn-white w-100',
            title: 'Login with Google',
            path: '/users/auth/google_oauth2/'
        ) %>
        &nbsp;
        <%= render SocialButtonComponent.new(
            type: 'facebook',
            link_class: 'btn btn-white w-100',
            title: 'Login with Facebook',
            path: '/users/auth/facebook/'
        ) %>
      </div>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
