<div class="text-center mb-4">
  <%= link_to root_path do %>
    <%= image_tag(asset_pack_path('media/images/logo.svg'), height: "36") %>
  <% end %>
</div>


<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name),
                    html: { class: 'card card-md', method: :post }) do |f| %>

  <div class="card-body">

    <h2 class="mb-4 text-center"><%= t(".resend_unlock_instructions") %></h2>

    <%= f.error_notification %>
    <%= render TopPageNotifyComponent.new(message: f.full_error(:unlock_token), alert_type: :warning) %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-footer">
      <%= f.button :submit, t(".resend_unlock_instructions"), class: 'btn btn-primary w-100', id: 'resend' %>
    </div>

  </div>

<% end %>

<%= render "devise/shared/links" %>
