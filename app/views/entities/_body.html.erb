<%= render AccordionComponent.new(accordion_id: 'entity-body-accordion', css_class: 'mb-3 bg-white') do |accordion_component| %>
  <%= accordion_component.item(item_id: 'entity-body-item') do |item_component| %>
    <%= item_component.header do %>
      <%= t('.body') %>
    <% end %>

    <%= item_component.body(css_class: 'pt-0') do %>
      <%= f.input :body,
                  label: false,
                  as: :rich_text_area,
                  input_html: {
                    class: 'trix-content fs-6 lh-lg',
                    'data-posts-trix-translations-value': trix_translations.to_json,
                  }
      %>
    <% end %>
  <% end %>
<% end %>