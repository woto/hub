<%= accordion_component.item(item_id: 'entity-children-item') do |item_component| %>
  <%= item_component.header do %>
    <%= t('.children') %>
  <% end %>

  <%= item_component.body(css_class: 'pt-0') do %>
    <%= f.input :child_ids, as: :select,
                label: false,
                input_html: {
                  multiple: true,
                  'data-controller': 'entity-relatives'
                },
                collection: (f.object.children.map do |entity|
                  [
                    entity.title, entity.id, 'data-data': {
                    lookups: entity.lookups.map(&:to_label),
                    topics: entity.topics.map(&:to_label),
                    image: entity.image_hash
                  }.to_json,
                  ]
                end) %>
  <% end %>
<% end %>