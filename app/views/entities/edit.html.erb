<% seo.title! t("titles.entities") %>

<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.homepage'), root_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.dashboard'), dashboard_path %>
  </li>
  <li class="breadcrumb-item">
    <%=link_to t('breadcrumbs.entities'), entities_path %>
  </li>
  <li class="breadcrumb-item active">
    <%=link_to t('breadcrumbs.edit_entity'), edit_entity_path(@entity), rel: [Seo::NoFollow] %>
  </li>
<% end %>

<%= render 'wrapper' do %>
  <%= render 'form', entity: @entity %>
<% end %>
