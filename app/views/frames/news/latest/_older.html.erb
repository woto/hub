<%= tag.div test_id => 'link-to-older-news' do %>

  <% page = params['page'].to_i %>

  <% if page + 1 < @count %>
    <%= link_to frames_news_latest_path(page: page + 1),
                test_id => 'older-news',
                class: 'p-1' do %>
      <%== GlobalHelper.icon('chevron-left') %>
    <% end %>
  <% else %>
    <%= tag.span test_id => 'older-news',
                 class: 'link-dark p-1' do %>
      <%== GlobalHelper.icon('chevron-left') %>
    <% end %>
  <% end %>
<% end %>
