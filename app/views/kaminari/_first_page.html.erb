<%= tag.li id: "pagination_first", class: "page-item flex-fill" do %>
  <% if current_page.first? %>
    <%= link_to raw(t 'views.pagination.first'), '', remote: remote, class: "page-link text-muted" %>
  <% else %>
    <%= link_to raw(t 'views.pagination.first'), url, remote: remote, class: "page-link" %>
  <% end %>
<% end %>
