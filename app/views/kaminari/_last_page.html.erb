<%= tag.li id: "pagination_last", class: "page-item flex-fill" do %>
  <% if current_page.last? %>
    <%= link_to raw(t 'views.pagination.last'), '', remote: remote, class: "page-link text-muted" %>
  <% else %>
    <%= link_to raw(t 'views.pagination.last'), url, remote: remote, class: "page-link" %>
  <% end %>
<% end %>
