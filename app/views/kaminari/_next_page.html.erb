<%= tag.li id: "pagination_next", class: "page-item flex-fill" do %>
  <% if current_page.last? %>
    <%= link_to raw(t 'views.pagination.next'), '', rel: 'next', remote: remote, class: "page-link text-muted" %>
  <% else %>
    <%= link_to raw(t 'views.pagination.next'), url, rel: 'next', remote: remote, class: "page-link" %>
  <% end %>
<% end %>
