<% li_class = "page-item" %>
<% li_id = "pagination_#{page.number}" %>

<% if page.current? %>
  <%= tag.li id: li_id, class: "#{li_class} active" do %>
    <%= content_tag :a, page, rel: page.rel, class: 'page-link' %>
  <% end %>
<% else %>
  <%= tag.li id: li_id, class: "#{li_class}" do %>
    <%= link_to page, url, rel: page.rel, class: 'page-link' %>
  <% end %>
<% end %>
