<% li_id = "pagination_#{page.number}" %>

<% if page.current? %>
  <%= tag.li id: li_id, class: "active" do %>
    <%= content_tag :a, page, rel: page.rel, class: '!tw-no-underline tw-rounded tw-bg-indigo-700 !tw-text-white hover:tw-bg-indigo-600 tw-relative tw-inline-flex tw-items-center tw-px-3 tw-py-2 tw-text-sm tw-font-medium' %>
  <% end %>
<% else %>
  <%= tag.li id: li_id do %>
    <%= link_to page, url, rel: page.rel, class: '!tw-no-underline tw-rounded tw-bg-white tw-text-gray-500 hover:tw-bg-gray-50 tw-relative tw-inline-flex tw-items-center tw-px-3 tw-py-2 tw-text-sm tw-font-medium' %>
  <% end %>
<% end %>
