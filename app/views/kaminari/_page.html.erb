<% css_class = 'd-none d-xl-inline-block' if ((current_page.number - page.number).abs - 4).abs == 0 %>
<% css_class = 'd-none d-md-inline-block' if ((current_page.number - page.number).abs - 4).abs == 1 %>
<% css_class = 'd-none d-md-inline-block' if ((current_page.number - page.number).abs - 4).abs == 2 %>
<% css_class = 'd-none d-md-inline-block' if ((current_page.number - page.number).abs - 4).abs == 3 %>

<% if page.current? %>
  <li class="page-item flex-fill active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: "page-link" %>
  </li>
<% else %>
  <li class="page-item flex-fill <%= css_class %>">
    <%= link_to page, url, remote: remote, rel: page.rel, class: "page-link" %>
  </li>
<% end %>
