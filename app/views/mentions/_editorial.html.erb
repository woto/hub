<% if current_user.staff? %>
  <%= render AccordionComponent.new(accordion_id: 'mention-accordion', css_class: 'bg-white mb-3') do |accordion_component| %>
    <%= accordion_component.item(item_id: 'mention-item') do |item_component| %>
      <%= item_component.header do %>
        <%= t('.editorial') %>
      <% end %>

      <%= item_component.body(css_class: 'pt-0') do %>
        <%= f.association :user, as: :select,
                          input_html: {
                            "data-controller": 'ajax-user',
                          },
                          placeholder: true,
                          collection: User.where(id: f.object.user_id).map { |user|
                            [user.email, user.id]
                          },
                          selected: f.object.user_id %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
