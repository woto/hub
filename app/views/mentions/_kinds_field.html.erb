<%= accordion_component.item(item_id: 'mention-kinds-item') do |item_component| %>
  <%= item_component.header do %>
    <%= t('.kinds') %>
  <% end %>

  <%= item_component.body(css_class: 'pt-0') do %>
    <%# TODO: write article %>
    <%= f.input :kinds, as: :check_boxes, collection: [''], checked: ['', true],
                wrapper_html: { class: 'd-none'},
                error: false,
                label: false,
                hint: false %>

    <%= f.input :kinds,
                label_text: false,
                as: :check_boxes,
                collection: Mention::KINDS.map { |kind|
                  [render(Mentions::KindIconComponent.new(kind: kind)), kind]
                },
                wrapper: :radio_button_group %>

  <% end %>
<% end %>