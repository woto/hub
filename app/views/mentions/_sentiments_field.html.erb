<%= accordion_component.item(item_id: 'mention-sentiments-item') do |item_component| %>
  <%= item_component.header do %>
    <%= t('.sentiments') %>
  <% end %>

  <%= item_component.body(css_class: 'pt-0') do %>
    <%# TODO: write article %>
    <%= f.input :sentiments, as: :check_boxes, collection: [''], checked: ['', true],
                wrapper_html: { class: 'd-none'},
                error: false,
                label: false,
                hint: false %>

    <%= f.input :sentiments,
                label_text: false,
                as: :check_boxes,
                collection: Mention::SENTIMENTS.map { |sentiment|
                  [render(Mentions::SentimentIconComponent.new(sentiment: sentiment)), sentiment]
                },
                wrapper: :radio_button_group %>
  <% end %>
<% end %>