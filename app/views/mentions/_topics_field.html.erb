<%= accordion_component.item(item_id: 'mention-topics-item') do |item_component| %>
  <%= item_component.header do %>
    <%= t('.topics') %>
  <% end %>

  <%= item_component.body(css_class: 'pt-0') do %>
    <%# TODO: write article %>
    <%= f.input :topics, as: :check_boxes, collection: [''], checked: ['', true],
                input_html: { name: 'mention[topics_attributes][]' },
                wrapper_html: { class: 'd-none'},
                error: false,
                label: false,
                hint: false %>

    <%= f.input :topics,
                label: false,
                as: :select,
                input_html: {
                  form: f.options[:html][:id],
                  multiple: true,
                  "data-controller": 'mention-topic',
                  "data-mention-topic-placeholder-value": t('simple_form.placeholders.mention.topics.title'),
                  name: 'mention[topics_attributes][]'
                },
                collection: f.object.topics.map(&:title),
                selected: f.object.topics.map(&:title) %>
  <% end %>
<% end %>