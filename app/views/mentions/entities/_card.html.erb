<% entity = @entity %>

<%= render Entities::CardComponent.new(
  entity_id: entity.id,
  is_main: false,
  image: GlobalHelper.image_hash(entity),
  title: entity.title,
  intro: entity.intro,
  lookups: entity.lookups.map(&:to_label),
  topics: entity.topics.map(&:to_label),
  assignable: false,
  controllable: true,
  form_id: params[:form_id],
) %>