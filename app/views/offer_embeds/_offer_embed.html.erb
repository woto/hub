<div class="d-flex justify-content-center">

  <div class="card d-flex flex-column mb-0 col assa">

    <div class="card-body d-flex flex-column">

      <%= link_to offer_embed.url, class: 'text-center' do %>
        <%= image_tag offer_embed.picture, class: 'card-img-top mb-3', alt: offer_embed.name %>
      <% end %>

      <h3 class="card-title">
        <%= link_to offer_embed.url do %>
          <%= offer_embed.name %>
        <% end %>
      </h3>

      <div class="text-muted"><%= truncate(offer_embed.description, length: 200) %></div>

      <div class="d-flex align-items-center pt-5 mt-auto">
        <span class="avatar avatar-md" style="background-image: url(https://preview-dev.tabler.io/static/avatars/000f.jpg)"></span>
        <div class="ms-3">
          <%= tag.span 'Maryjo Lebarree', class: 'text-body' %>
          <small class="d-block text-muted">3 days ago</small>
        </div>

        <div class="ms-auto">
          <%= tag.span class: 'icon d-none d-md-inline-block ms-3 text-muted' do %>
            <%== GlobalHelper.icon('heart') %>
          <% end %>
        </div>

      </div>
    </div>
  </div>

</div>
