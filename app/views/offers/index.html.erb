<% content_for :title do %>
  <%= t("titles.feeds") %>
<% end %>

<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.homepage'), root_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.dashboard'), dashboard_path %>
  </li>
  <li class="breadcrumb-item active">
    <%=link_to t('breadcrumbs.offers'), offers_path %>
  </li>
<% end %>

<div class="card">
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
      <tr>
        <th>Offer</th>
        <th>Price</th>
        <th>Picture</th>
        <th>Feed</th>
        <th>Dump</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @offers.each do |row| %>
        <tr>
          <td jid="name">
            <%= row['_source']['name'] %>
          </td>
          <td>
            <%= row['_source']['price'] %>
            <%= row['_source']['currencyId'] %>
          </td>
          <td>
            <% row['_source']['picture'].each do |picture| %>
              <%= image_tag picture %>
            <% end %>
          </td>
          <td>
            <%= row['_index'] %>
          </td>
          <td>
            <%= debug row %>
          </td>
          <td>
            write a post
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer d-sm-flex align-items-center">
    <p class="m-sm-0 text-muted">Showing <span>1</span> to <span><%= @offers.size %></span> of <span><%= @total_count %></span> entries</p>
    <%= paginate @offers %>
  </div>

</div>
