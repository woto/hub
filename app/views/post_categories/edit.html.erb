<% seo.title! t("titles.post_categories") %>

<% content_for :breadcrumbs do %>
  <%= render BreadcrumbComponent.new do |b| %>
    <%= b.root_item title: t('breadcrumbs.homepage'), url: root_path %>
    <%= b.item title: t('breadcrumbs.dashboard'), url: dashboard_path %>
    <%= b.item title: t('breadcrumbs.post_categories'), url: post_categories_path %>
    <%= b.item title: t('breadcrumbs.edit_post_category'), url: edit_post_category_path(@post_category) %>
  <% end %>
<% end %>

<%= render 'form', post_category: @post_category %>
