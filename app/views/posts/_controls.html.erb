<div class="dropdown">

  <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-boundary="window">
    <%= t('buttons.controls') %>
  </button>

  <div class="dropdown-menu">

    <%= link_to t('buttons.show'), post_path(row['_id']), class: 'dropdown-item' %>
    <% post = Post.find(row['_id']) %>
    <% if policy(post).edit? %>
      <%= link_to t('buttons.edit'), edit_post_path(row['_id']), class: 'dropdown-item' %>
    <% end %>
    <% if policy(post).destroy? %>
      <%= link_to t('buttons.delete'), post_path(row['_id']), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
    <% end %>

  </div>
</div>
