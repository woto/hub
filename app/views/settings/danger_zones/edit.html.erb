<% scope = ['devise', 'registrations', 'edit'] %>

<% seo.title! t("titles.settings") %>

<% content_for :breadcrumbs do %>
  <%= render BreadcrumbComponent.new do |b| %>
    <%= b.root_item(title: t('breadcrumbs.homepage'), url: root_path) %>
    <%= b.item(title: t('breadcrumbs.dashboard'), url: dashboard_path) %>
    <%= b.item(title: t('breadcrumbs.danger_zone'), url: edit_settings_danger_zone_path) %>
  <% end %>
<% end %>

<div class="col">
<div class="card card-md">

  <div class="card-body">

    <div class="row">

      <div class="col-md-3 me-3">
        <%= render ProfileListComponent.new %>
      </div>

      <div class="col-md-5">

        <h2 class="mb-4"><%= t('.danger_zone') %></h2>

        <h3><%= t("cancel_my_account", scope: scope) %></h3>

        <p><%= t("unhappy", scope: scope) %>
          <%= link_to t(".cancel_my_account"), registration_path(:user), data: { confirm: t(".are_you_sure") }, method: :delete %>
        </p>

      </div>
    </div>
  </div>
</div>
</div>
