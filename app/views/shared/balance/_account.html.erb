<div class="col-12">
  <div class="card card-sm">
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-auto">
          <span class="bg-green text-white avatar">
            <% case currency.to_s %>
            <% when 'rub' %>
              <i class="fas fa-ruble-sign fa-lg"></i>
            <% when 'usd' %>
              <i class="fas fa-dollar-sign fa-lg"></i>
            <% when 'eur' %>
              <i class="fas fa-euro-sign fa-lg"></i>
            <% else %>
              <i class="fas fa-money-bill-wave-alt"></i>
            <% end %>
          </span>
        </div>
        <div class="col">
          <div class="font-weight-bold">
            <%= GlobalHelper.decorate_money(Account.available_to_request(user, currency), currency) %>
          </div>
          <div class="text-muted">
            <%= link_to t('.details'), "#accounts-#{currency}", 'data-bs-toggle': "collapse" %>
          </div>
        </div>

        <%= tag.div class: 'mt-3 collapse', id: "accounts-#{currency}" do %>
          <% scope = user.accounts.order(:code).where(code: [:accrued_post, :pending_check, :approved_check, :payed_check], currency: currency) %>
          <% scope.each do |account| %>
            <div class="mb-2 card card-sm bg-lime-lt">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                <div class="text-muted">
                    <%= GlobalHelper.decorate_money(account.amount, account.currency) %>
                  </div>
                  <div class="font-weight-medium">
                    <%= badge(status: account.code)  %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
