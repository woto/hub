<%= tag.div test_id => "posts-card-#{row.id}", test_class => 'posts-card', class: 'card card-md mb-3' do %>
  <div class="card-body">

    <div class="d-flex align-items-center mb-4">
      <h2>
        <%= link_to article_link(row.id) do %>
          <%== row.title %>
        <% end %>
      </h2>

      <span class="ms-auto text-muted posts-date">
        <%= l Time.zone.parse(row.published_at).utc.to_date %>
      </span>
    </div>

    <%= tag.div class: 'fs-6 lh-lg articles-preview', 'data-controller': 'lightbox' do %>
      <%== row.intro %>
    <% end %>

    <div class="mt-4">
      <%= link_to t(:continue_reading), article_link(row.id), class: 'btn btn-pink' %>
    </div>

    <div class="mt-3">
      <% row.tags.each do |item| %>
        <% next if item.blank? %>

        <%= link_to item, articles_by_tag_link(item), class: 'badge bg-cyan-lt me-1 mb-1' %>
      <% end %>
    </div>

  </div>
<% end %>
