<% content_for :title do %>
  <%= t(@settings[:plural], scope: ['titles']) %>
<% end %>

<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.homepage'), root_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.dashboard'), dashboard_path %>
  </li>
  <li class="breadcrumb-item active">
    <%=link_to t('breadcrumbs.help'), news_index_path %>
  </li>
<% end %>

<div class="col">
  <div class="row">
    <div class="offset-lg-2 col-lg-8">

      <div class="accordion mt-3 bg-white" id="help-accordion">
        <% by_categories_menu['aggregations']['group_by_post_category_title']['buckets'].each_with_index do |bucket, index| %>
          <div class="accordion-item">
            <h2 class="accordion-header">
              <%= tag.button class: "accordion-button collapsed", type: "button", 'data-bs-toggle': "collapse", 'data-bs-target': "#category-#{index}" do %>
                <%= bucket['key'] %>
              <% end %>
            </h2>
            <%= tag.div id: "category-#{index}", class: "accordion-collapse collapse", 'data-bs-parent': "#help-accordion" do %>
              <div class="accordion-body p-0">
                <% by_categories_menu['hits']['hits'].select { |hit| hit['_source']['post_category_title'] == bucket['key'] }.each do |post| %>
                  <a href="#" class="fs-6 list-group-item list-group-item-action border-0">
                    <%= post['_source']['title'] %>
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
  </div>
</div>
