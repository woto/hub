<% content_for :title do %>
  <%= t(@settings[:plural], scope: ['titles']) %>
<% end %>

<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.homepage'), root_path %>
  </li>
  <li class="breadcrumb-item">
    <%= link_to t('breadcrumbs.dashboard'), dashboard_path %>
  </li>
  <li class="breadcrumb-item active">
    <%=link_to t('breadcrumbs.news'), news_index_path %>
  </li>
<% end %>

<div class="col">
  <div class="row">

    <div class="col-md-8 col-lg-9">
      <div class="card card-md">
        <div class="card-body">
          <% rows.each do |row| %>

            <div class="d-flex align-items-center mb-4">

              <h2>

                <%= link_to news_path(id: row.id) do %>
                  <%== row.title %>
                <% end %>

                <% if policy(:news).edit? %>
                  <%= link_to edit_post_path(id: row.id), class: 'btn btn-icon btn-sm btn-pink ms-2 me-5' do %>
                    <%== GlobalHelper.icon('pencil') %>
                  <% end %>
                <% end %>

              </h2>

              <span class="ms-auto text-muted">
                <%= l Time.zone.parse(row.created_at).to_date %>
              </span>

            </div>

            <div class="fs-6 lh-lg">
              <%== row.intro %>
            </div>

            <div class="d-flex justify-content-between mt-5 align-items-start">
              <%= link_to t(:continue_reading), news_path(id: row.id), class: 'btn bg-azure-lt' %>

              <div class="d-flex justify-content-end flex-wrap gap-1 ms-sm-5">

                <% row.tags.each do |item| %>
                  <% next if item.blank? %>

                  <%= link_to item, '#', class: 'badge badge-primary' %>
                <% end %>

              </div>
            </div>

            <% unless rows.last == row %>
              <hr>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-lg-3">

      <%= render Widgets::NewsByMonthComponent.new %>

      <div class="my-5"></div>

      <%= render Widgets::NewsByTagComponent.new %>

    </div>
  </div>
</div>

<%= render 'table_footer', rows: rows %>
