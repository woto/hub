<% if policy(:feed).new? %>
  <% if @advertiser %>
    <%= tag.button class: 'mb-4 btn btn-warning',
                   "data-controller": 'modal-static-opener',
                   "data-action": 'modal-static-opener#open',
                   "data-modal-static-opener-text": @advertiser.to_json do %>
      <%= t('buttons.advertiser') %>
    <% end %>
  <% end %>

  <% if @current_feed %>
    <%= tag.button class: 'mb-4 btn btn-warning',
        'data-controller': 'modal-static-opener',
        'data-action': 'modal-static-opener#open',
        'data-modal-static-opener-text-value': @current_feed.to_json do %>
      <%= t('buttons.feed') %>
    <% end %>
  <% end %>

  <% if @current_feed %>
    <%= tag.button class: 'mb-4 btn btn-warning',
                   'data-controller': 'modal-dynamic-opener',
                   'data-action': 'modal-dynamic-opener#open',
                   'data-modal-dynamic-opener-url-value': logs_feed_path(@current_feed) do %>
      <%= t('feed_logs', scope: ['buttons']) %>
    <% end %>
  <% end %>

  <% if @feed %>
    <%= link_to t('buttons.prioritize'), prioritize_feed_path(@feed),
                class: 'mb-4 btn btn-warning', method: :patch %>
  <% end %>

<% end %>
