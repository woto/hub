<%
  items = []

  if current_feed_category
    items << {
      title: t('.search_inside_feed_category', name: current_feed_category.to_label),
      url: url_for_search_inside_feed_category
    }
  end

  if current_feed
    items << {
      title: t('.search_inside_feed', name: current_feed.to_label),
      url: url_for_search_inside_feed
    }
  end

  if current_advertiser
    items << {
      title: t('.search_inside_advertiser', name: current_advertiser.to_label),
      url: url_for_search_inside_advertiser
    }
  end

  items << {
    title: t('.search_everywhere'),
    url: url_for_search_everywhere
  }
%>

<%= render(
      ReactComponent.new(name: 'SearchBar',
            class: 'tw-h-20 tw-w-20 tw-bg-red-500',
            props: {
              buttonTitle: t('header.search.button'),
              placeholder: t('header.search.placeholder'),
              q: params[:q],
              items: items
            }))
%>