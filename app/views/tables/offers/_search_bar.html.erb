<%= tag.div class: "input-group input-group-flat",
            'data-controller': 'search-offers clear-search',
            'data-search-offers-feed-category-url': url_for_search_inside_feed_category,
            'data-search-offers-feed-url': url_for_search_inside_feed,
            'data-search-offers-advertiser-url': url_for_search_inside_advertiser,
            'data-search-offers-everywhere-url': url_for_search_everywhere do %>

  <%= text_field_tag :q, params[:q],
                     'data-search-offers-target': 'searchText',
                     'data-clear-search-target': 'searchText',
                     'data-action': 'keydown->search-offers#clickSearchButton',
                     class: "search-text form-control",
                     placeholder: t('search_placeholder') %>


  <%= render Header::ClearSearchComponent.new %>

  <%= render 'tables/offers/search/button', btn_class: btn_class %>

<% end %>
