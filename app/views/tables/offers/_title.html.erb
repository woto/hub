<% if @favorite %>

  <% seo.title! "#{t('titles.favorite')}:  #{@favorite.to_label}" %>

<% elsif current_feed_category %>

  <% seo.title! "#{t('titles.feed_category')}: #{current_feed_category.to_label}" %>

  <% content_for :star do %>
    <% kind = 'feed_category_id' %>
    <%= render StarFavoriteComponent.new(
      is_favorite: @favorites_store.find(current_feed_category.id, kind),
      ext_id: current_feed_category.id,
      favorites_items_kind: kind,
      bobber: { class: 'z-index-decreased' }) %>
  <% end %>

<% elsif current_feed %>

  <% seo.title! "#{t('titles.feed')}: #{current_feed.to_label}" %>

  <% content_for :star do %>
    <% kind = 'feed_id' %>
    <%= render StarFavoriteComponent.new(
      is_favorite: @favorites_store.find(current_feed.id, kind),
      ext_id: current_feed.id,
      favorites_items_kind: kind,
      bobber: { class: 'z-index-decreased' }) %>
  <% end %>

<% elsif current_advertiser %>

  <% seo.title! "#{t('titles.advertiser')}: #{current_advertiser.to_label}" %>

  <% content_for :star do %>
    <% kind = 'advertiser_id' %>
    <%= render StarFavoriteComponent.new(
      is_favorite: @favorites_store.find(current_advertiser.id, kind),
      ext_id: current_advertiser.id,
      favorites_items_kind: kind,
      bobber: { class: 'z-index-decreased' }) %>
  <% end %>
<% else %>
    <% seo.title! t('titles.offers') %>
<% end %>
