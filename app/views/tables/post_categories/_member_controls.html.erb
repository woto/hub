<div class="dropdown">

  <button type="button" class="btn btn-white dropdown-toggle" data-bs-toggle="dropdown">
    <%= t('buttons.controls') %>
  </button>

  <div class="dropdown-menu">

    <%= link_to t('buttons.show'), post_category_path(row.id), class: 'dropdown-item' %>

    <%# TODO: eliminate n+1 %>
    <% post_category = PostCategory.find(row.id) %>
    <% if policy(post_category).edit? %>
      <%= link_to t('buttons.edit'), edit_post_category_path(row.id), class: 'dropdown-item' %>
    <% end %>
    <% if policy(post_category).destroy? %>
      <%= link_to t('buttons.delete'), post_category_path(row.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
    <% end %>

  </div>
</div>
