<div class="row row-deck">
  <div class="col-sm-10 col-md-9 col-lg-6">
    <div class="card">
      <div class="card-status-left bg-green"></div>
      <div class="card-body">
        <%= simple_form_for @workspace_form,
                            as: :workspace_form,
                            method: :post,
                            url: table_workspaces_path(model: params[:controller], **request.params.slice(*GlobalHelper.workspace_params)),
                            local: true,
                            html: {
                              data: { test_id: 'workspace-form' }
                            } do |f| %>
          <%= f.input :name,
                      input_html: {
                          class: 'mb-1'
                      },
                      placeholder: 'Введите имя',
                      hint: t('.workspaces_hint')
          %>

          <%= f.button :submit, t('buttons.save'), class: 'btn btn-primary mt-2' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
