<p><%= t('greeting', scope: ['devise', 'mailer', 'email_changed'], recipient: @email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('message', scope: ['devise', 'mailer', 'email_changed'], email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('message', scope: ['devise', 'mailer', 'email_changed'], email: @resource.email) %></p>
<% end %>
