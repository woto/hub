<h1 class="mt-5"><%= Current.realm.title %></h1>

<% content_for :categories do %>
  <%= render 'websites/categories', categories: Current.realm.post_categories.order(:title).to_depth(0).arrange %>
<% end %>

<% @posts.each do |post| %>
  <%= render 'websites/post_intro', post: post %>
<% end %>

<%= paginate @posts %>
